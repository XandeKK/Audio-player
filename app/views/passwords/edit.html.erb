<div id="clearance" class="drop-shadow-lg container mx-auto my-6 p-10 rounded-md">
  <h2 class="text-center text-3xl font-bold dark:text-white font-bold mb-10"><%= t(".title") %></h2>

  <p class="text-black dark:text-white"><%= t(".description") %></p>

  <%= form_for :password_reset,
        url: [@user, :password, token: @user.confirmation_token],
        html: { method: :put }, data: {turbo: false} do |form| %>
    <div class="my-3">
      <%= form.label :password, class: "#{form_label(:password)}" %>
      <%= form.password_field :password, class: "#{input(:password)}" %>
      <% unless @user.errors.messages[:password].empty? %>
        <% @user.errors.messages[:password].each do |message| %>
          <p class="<%= message_validation %>"><%= "Password #{message}" %></p>
        <% end %>
      <% end %>
    </div>

    <div class="text-end">
      <%= form.submit class: "cursor-pointer transition ease-in-out delay-150 hover:-translate-y-1 hover:scale-110 duration-300 text-white bg-blue-700 hover:bg-blue-800 focus:ring-4 focus:outline-none focus:ring-blue-300 font-medium rounded-lg text-sm px-5 py-2.5 text-center dark:bg-blue-600 dark:hover:bg-blue-700 dark:focus:ring-blue-800" %>
    </div>
  <% end %>
</div>
