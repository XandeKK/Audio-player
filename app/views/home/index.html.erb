<div id="playlist_body" class="container mx-auto mt-32 mb-64">
  <h2 class="text-2xl font-bold text-center text-black dark:text-white my-6">Recents</h2>
  <div class="grid gap-4 grid-cols-2 md:grid-cols-5">
    <% recents_hashing = hashing(@recents) %>
    <% @recents.each_with_index do |recent, index| %>
      <div>
        <%= render partial: "card_music", locals: {music: recent, index: index, name: "#{recents_hashing}"} %>
      </div>
    <% end %>
    <div id="playlist" data-name-playlist="<%= recents_hashing %>" data-controller="search"  data-item-playlist-param='<%= organize_data(@recents) %>'></div>
  </div>
  
  <h2 class="text-2xl font-bold text-center text-black dark:text-white my-6">Random</h2>
  <div class="grid gap-4 grid-cols-2 md:grid-cols-5">
    <% random_hashing = hashing(@random) %>
    <% @random.each_with_index do |random, index| %>
      <div>
        <%= render partial: "card_music", locals: {music: random, index: index, name: "#{random_hashing}"} %>
      </div>
    <% end %>
    <div id="playlist" data-name-playlist="<%= random_hashing %>" data-controller="search"  data-item-playlist-param='<%= organize_data(@random) %>'></div>
  </div>
</div>

